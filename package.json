  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.0.4"
  },
  "dependencies": {
    "@tailwindcss/ui": "^0.7.2",
    "watch": "^1.0.2"
  }
}
