{
  "name": "go-app",
  "version": "1.0.1",
  "description": "Starter pack for Go + TailwindCSS stack.",
  "main": "postcss.config.js",
  "scripts": {
    "watch:tailwind": "postcss src/base.css -o public/build/base.css -w",
